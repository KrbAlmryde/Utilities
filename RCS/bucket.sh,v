@#!/bin/sh
# This script determines which stimulus file should be used for each run, then performs 3dDecovolve
# It also extracts subbrick of interest using 3dbucket

echo ""
echo "Enter value for sub-brick you wish to extract" ; READ

#look up READ command, see how to implement it for subrick value, and what variable substitution it
#should read



	if [ "${run}" = "SP1" ]; then
			for stim in animal food null; do
				3dbucket -prefix ${name}_${stim}_peak_irf.nii \
					-fbuc ${name}_${stim}_norm_irf+orig "'[read]'"
			done

		elif [ "${run}" = "TP1" ]; then
			for stim in old new null; do
				3dbucket -prefix ${name}_${stim}_peak_irf.nii \
					-fbuc ${name}_${stim}_norm_irf+orig "'[read]'"
			done

		else
			for stim in male female null; do
				3dbucket -prefix ${name}_${stim}_peak_irf.nii \
					-fbuc ${name}_${stim}_norm_irf+orig "'[read]'"
			done
	fi@
